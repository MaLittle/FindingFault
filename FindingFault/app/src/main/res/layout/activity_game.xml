<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/start_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.huyd.findingfault.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.huyd.views.ProgressView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="center_horizontal"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <com.huyd.views.DrawRingImageView
            android:id="@+id/ring1"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@mipmap/point1_1"
            android:duplicateParentState="true"
            android:paddingLeft="10dp"
            app:srcCompat="@mipmap/point1_1"/>

        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <com.huyd.views.DrawRingImageView
            android:id="@+id/ring2"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@mipmap/point1_2"

            android:duplicateParentState="true"
            android:paddingRight="10dp"
            app:srcCompat="@mipmap/point1_2"/>
    </LinearLayout>
</RelativeLayout>